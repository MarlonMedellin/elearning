---
interface Props {
    variant?: "white" | "light" | "dark" | "glass";
    hover?: boolean;
    padding?: "none" | "sm" | "md" | "lg";
    class?: string;
    [key: string]: any;
}

const {
    variant = "white",
    hover = true,
    padding = "lg",
    class: className = "",
    ...rest
} = Astro.props;

const variants = {
    white: "bg-white border border-gray-100",
    light: "bg-brand-light/30 border border-brand-light",
    dark: "bg-brand-dark text-white border border-white/10",
    glass: "bg-white/80 backdrop-blur-md border border-white/20",
};

const paddings = {
    none: "",
    sm: "p-4",
    md: "p-6",
    lg: "p-8 lg:p-10",
};

const classes = [
    "rounded-card transition-all duration-300",
    variants[variant],
    paddings[padding],
    hover ? "hover:shadow-card-hover hover:-translate-y-1" : "shadow-card",
    className,
].join(" ");
---

<div class={classes} {...rest}>
    <slot />
</div>
