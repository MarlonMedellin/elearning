---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import carousel1 from '../assets/carousel-1.jpg';
import carousel2 from '../assets/carousel-2.jpg';
import carousel3 from '../assets/carousel-3.jpg';
import carousel4 from '../assets/carousel-4.jpg';
import carousel5 from '../assets/carousel-5.jpg';

const slides = [
  { img: carousel1, title: 'Así Vivimos la Feria de la Ciencia', date: '7 de Noviembre de 2025' },
  { img: carousel2, title: 'Así Vivimos la Feria de la Ciencia', date: '7 de Noviembre de 2025' },
  { img: carousel3, title: 'Así Vivimos la Feria de la Ciencia', date: '7 de Noviembre de 2025' },
  { img: carousel4, title: 'Así Vivimos la Feria de la Ciencia', date: '7 de Noviembre de 2025' },
  { img: carousel5, title: 'Así Vivimos la Feria de la Ciencia', date: '7 de Noviembre de 2025' },
];
---

<div class="container-fluid p-0 mb-5 overflow-hidden">
    <div class="owl-carousel header-carousel relative">
        {slides.map((slide) => (
            <div class="owl-carousel-item relative">
                <Image src={slide.img} alt={slide.title} class="w-full h-[500px] lg:h-[750px] object-cover" />
                <div class="absolute inset-0 flex items-center bg-black/60">
                    <div class="container mx-auto px-4 lg:px-8">
                        <div class="max-w-3xl">
                            <h5 class="text-primary uppercase mb-3 font-bold animate slideInDown flex items-center gap-2">
                                <Icon name="lucide:sparkles" class="h-5 w-5" />
                                IE CAPILLA DEL ROSARIO
                            </h5>
                            <h1 class="text-4xl lg:text-7xl text-white font-black mb-4 animate slideInDown tracking-tight leading-tight">{slide.title}</h1>
                            <p class="text-xl text-white/90 mb-8 animate slideInDown font-medium flex items-center gap-2">
                                <Icon name="lucide:calendar" class="h-6 w-6 text-primary" />
                                {slide.date}.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        ))}
    </div>
</div>
