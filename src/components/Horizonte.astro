---
import { Icon } from "astro-icon/components";
import Card from "./ui/Card.astro";
import SectionHeader from "./SectionHeader.astro";

const principios = [
    "El mundo es una realidad transformable que debe conocerse mediante un proceso continuo de aprendizaje.",
    "El ser humano, como realidad integral, debe apropiarse teórica, práctica y estéticamente del mundo.",
    "La educación es un proceso sistemático orientado al crecimiento integral mediante valores humanos y culturales.",
    "El aprendizaje se fortalece en ambientes de libertad, responsabilidad y respeto.",
    "El estudiante es gestor de su propio desarrollo y de su entorno.",
    "Corresponsabilidad: familia, escuela, sociedad y Estado comparten la formación integral del ciudadano.",
    "Diversidad: reconocimiento e inclusión de todas las personas sin distinción de género, etnia, orientación, discapacidad o creencia.",
];

const valores = [
    {
        name: "Amor",
        desc: "promueve paz interior, alegría y respeto por los demás.",
    },
    { name: "Respeto", desc: "aprecio y reconocimiento por el otro." },
    {
        name: "Convivencia",
        desc: "relación armónica y pacífica con los demás.",
    },
    { name: "Responsabilidad", desc: "cumplimiento de deberes y compromisos." },
    { name: "Solidaridad", desc: "compartir y ayudar al otro en comunidad." },
    {
        name: "Equidad",
        desc: "justicia e igualdad de trato sin discriminación.",
    },
    {
        name: "Pluralismo",
        desc: "tolerancia y reconocimiento de la diferencia.",
    },
    {
        name: "Libertad",
        desc: "actuar según criterio propio respetando las normas.",
    },
    {
        name: "Tolerancia",
        desc: "aceptación de ideas, creencias y estilos de vida distintos.",
    },
    {
        name: "Medio ambiente",
        desc: "respeto y cuidado del entorno natural y social.",
    },
];
---

<section class="py-24 bg-white" id="horizonte">
    <div class="container mx-auto px-4 lg:px-8">
        <SectionHeader
            subtitle="Institución"
            title="Filosofía, Misión, Visión y Valores"
        />

        <div class="grid gap-8 lg:grid-cols-2">
            <!-- Philosophy -->
            <div class="lg:col-span-2">
                <Card variant="light" class="group">
                    <h3
                        class="text-3xl font-bold text-primary mb-6 flex items-center gap-4"
                    >
                        <Icon
                            name="lucide:feather"
                            class="h-8 w-8 group-hover:rotate-12 transition-transform"
                        />
                        Filosofía de la Institución
                    </h3>
                    <p class="text-brand-dark/80 leading-relaxed text-xl">
                        La Institución Educativa Capilla del Rosario es una
                        institución de carácter oficial que promueve una
                        educación basada en la formación de valores y en el
                        conocimiento científico, deportivo y cultural. Su
                        propósito es formar personas íntegras, críticas,
                        analíticas, investigativas, participativas, con
                        autonomía y sentido de justicia.
                    </p>
                </Card>
            </div>

            <!-- Mission -->
            <Card>
                <h3
                    class="text-2xl font-bold text-primary mb-6 flex items-center gap-3"
                >
                    <Icon name="lucide:target" class="h-6 w-6" />
                    Misión
                </h3>
                <p class="text-gray-600 leading-relaxed lg:text-lg">
                    Ofrece una education integral e incluyente en los niveles de
                    Preescolar, Básica Primaria, Modelos Flexibles, Secundaria y
                    Media Técnica, mediante un currículo flexible que responde a
                    las necesidades educativas con calidad humana.
                </p>
            </Card>

            <!-- Vision -->
            <Card>
                <h3
                    class="text-2xl font-bold text-primary mb-6 flex items-center gap-3"
                >
                    <Icon name="lucide:eye" class="h-6 w-6" />
                    Visión
                </h3>
                <p class="text-gray-600 leading-relaxed lg:text-lg">
                    Para el año 2030, la institución será reconocida como líder
                    en desarrollo humano, promoviendo un currículo flexible e
                    inclusivo que contribuya al mejoramiento de las condiciones
                    del entorno como espacio formativo para toda su comunidad.
                </p>
            </Card>

            <!-- Principles -->
            <Card variant="dark" hover={false} class="shadow-2xl">
                <h3
                    class="text-2xl font-bold text-sky-400 mb-8 flex items-center gap-3"
                >
                    <Icon name="lucide:scale" class="h-7 w-7" />
                    Principios Institucionales
                </h3>
                <ul class="space-y-5">
                    {
                        principios.map((item, index) => (
                            <li class="flex gap-4 text-gray-200">
                                <span class="text-sky-400 font-black text-lg">
                                    0{index + 1}
                                </span>
                                <span class="text-sm leading-relaxed">
                                    {item}
                                </span>
                            </li>
                        ))
                    }
                </ul>
            </Card>

            <!-- Values -->
            <Card hover={false}>
                <h3
                    class="text-2xl font-bold text-primary mb-8 flex items-center gap-3"
                >
                    <Icon name="lucide:heart" class="h-7 w-7" />
                    Valores Institucionales
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    {
                        valores.map((valor) => (
                            <div class="p-5 bg-brand-light/30 rounded-2xl hover:bg-brand-light/50 transition-colors border border-transparent hover:border-primary/10">
                                <h4 class="font-bold text-brand-dark text-sm mb-1">
                                    {valor.name}
                                </h4>
                                <p class="text-xs text-gray-600 font-medium">
                                    {valor.desc}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </Card>
        </div>
    </div>
</section>
