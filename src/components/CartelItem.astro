---
import { Icon } from "astro-icon/components";

interface Props {
  time: string;
  title: string;
  description: string;
  borderColor: string;
}

const { time, title, description, borderColor } = Astro.props;
---

<div
  class={`flex gap-4 p-5 bg-white border-l-4 ${borderColor} shadow-sm hover:shadow-md transition-shadow rounded-r-lg`}
>
  <div
    class="flex-shrink-0 flex flex-col items-center justify-center w-20 border-r border-gray-100 pr-4 my-1"
  >
    <Icon name="lucide:clock" class="w-5 h-5 text-gray-400 mb-1" />
    <span class="text-brand-dark font-black text-sm whitespace-nowrap">
      {time}
    </span>
  </div>
  <div>
    <h3 class="text-lg font-bold text-brand-dark mb-1">
      {title}
    </h3>
    <p class="text-gray-600 text-sm leading-relaxed">
      {description}
    </p>
  </div>
</div>
