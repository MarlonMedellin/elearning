---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="bg-primary py-16 mb-12">
    <div class="container mx-auto px-4 lg:px-8">
        <h1 class="text-4xl lg:text-6xl text-white font-bold mb-4">{title}</h1>
        <nav aria-label="breadcrumb">
            <ol class="flex text-white/80 text-sm gap-2">
                <li>
                    <a href="/" class="hover:text-white transition-colors"
                        >Inicio</a>
                </li>
                <li class="before:content-['/'] before:mr-2">{title}</li>
            </ol>
        </nav>
    </div>
</div>
