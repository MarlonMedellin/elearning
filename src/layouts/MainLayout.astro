---
import "../styles/global.css";
import "@fontsource/heebo/400.css";
import "@fontsource/heebo/500.css";
import "@fontsource/heebo/600.css";
import "@fontsource/nunito/600.css";
import "@fontsource/nunito/700.css";
import "@fontsource/nunito/800.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Sitio Institucional - IE Capilla del Rosario" } =
  Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - IE Capilla del Rosario</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={`${title} - IE Capilla del Rosario`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL("/favicon.png", Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta
      property="twitter:title"
      content={`${title} - IE Capilla del Rosario`}
    />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content={new URL("/favicon.png", Astro.site)}
    />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "EducationalOrganization",
        "name": "Institución Educativa Capilla del Rosario",
        "url": "https://lacapilla.edu.co",
        "logo": "https://lacapilla.edu.co/favicon.png",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Cl. 6 Sur #79-195",
          "addressLocality": "Medellín",
          "addressRegion": "Antioquia",
          "addressCountry": "CO"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+57-604-341-0914",
          "contactType": "customer service"
        }
      }
    </script>

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png" />
  </head>
  <body class="bg-white">
    <slot />

    <script is:inline>
      // Simple back to top toggle
      window.addEventListener("scroll", () => {
        const btn = document.getElementById("back-to-top");
        if (window.scrollY > 300) {
          btn?.classList.remove("hidden");
        } else {
          btn?.classList.add("hidden");
        }
      });
    </script>
  </body>
</html>
