---
import MainLayout from "../layouts/MainLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import SectionHeader from "../components/SectionHeader.astro";
import ScheduleTable from "../components/ScheduleTable.astro";
import Card from "../components/ui/Card.astro";
import { Icon } from "astro-icon/components";

const niveles = [
    { name: "Jardín", desc: "Nivel de formación inicial." },
    { name: "Preescolar", desc: "Nivel de formación inicial." },
    { name: "Básica Primaria", desc: "Grados 1.º a 5.º." },
    { name: "Básica Secundaria", desc: "Grados 6.º a 9.º." },
    { name: "Media Técnica (Comercio)", desc: "Grados 10.º y 11.º." },
];

const proyectos = [
    {
        name: "PRAE",
        icon: "lucide:leaf",
        desc: "Educación ambiental y sostenibilidad institucional.",
    },
    {
        name: "Escuela de Padres",
        icon: "lucide:users-round",
        desc: "Formación y acompañamiento a familias.",
    },
    {
        name: "Bienestar",
        icon: "lucide:heart-handshake",
        desc: "Acciones de apoyo y convivencia escolar.",
    },
];
---

<MainLayout title="Vida Institucional">
    <Navbar />
    <PageHeader title="Vida Institucional" />

    <main class="space-y-20 pb-20">
        <!-- Oferta Académica -->
        <section class="container mx-auto px-4 lg:px-8" id="jornadas">
            <div class="grid gap-12 lg:grid-cols-2">
                <div>
                    <SectionHeader
                        subtitle="Oferta"
                        title="Jornadas y Niveles"
                    />
                    <div class="space-y-4">
                        {
                            niveles.map((nivel) => (
                                <div class="flex items-start gap-5 p-5 rounded-2xl border border-transparent hover:border-primary/10 hover:bg-brand-light/20 transition-all group">
                                    <div class="w-2.5 h-2.5 rounded-full bg-primary mt-2.5 shrink-0 group-hover:scale-125 transition-transform" />
                                    <div>
                                        <h4 class="font-bold text-brand-dark text-lg mb-1">
                                            {nivel.name}
                                        </h4>
                                        <p class="text-base text-gray-500 leading-relaxed">
                                            {nivel.desc}
                                        </p>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>

                <div class="space-y-8">
                    <div>
                        <h3
                            class="text-2xl font-black text-brand-dark mb-8 flex items-center gap-3 tracking-tight"
                        >
                            <Icon
                                name="lucide:clock"
                                class="text-primary h-7 w-7"
                            /> Horarios Académicos
                        </h3>
                        <Card
                            padding="none"
                            hover={false}
                            class="overflow-hidden"
                        >
                            <ScheduleTable />
                        </Card>
                    </div>

                    <Card variant="dark">
                        <h4 class="font-bold text-sky-400 mb-4 text-xl">
                            Modelos Flexibles
                        </h4>
                        <ul class="space-y-3 text-base text-gray-300">
                            <li class="flex gap-2">
                                <span class="text-sky-400">•</span> Procesos Básicos
                                y Aceleración del Aprendizaje
                            </li>
                            <li class="flex gap-2">
                                <span class="text-sky-400">•</span> Programa Caminar
                                a la Secundaria
                            </li>
                        </ul>
                    </Card>
                </div>
            </div>
        </section>

        <!-- Proyectos -->
        <section class="bg-gray-50 py-24" id="proyectos">
            <div class="container mx-auto px-4 lg:px-8">
                <SectionHeader
                    subtitle="Institucional"
                    title="Nuestros Proyectos"
                    className="text-center mx-auto"
                />
                <div class="grid gap-8 md:grid-cols-3">
                    {
                        proyectos.map((proyecto) => (
                            <Card class="text-center group">
                                <div class="w-20 h-20 bg-brand-light rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:bg-primary transition-all duration-500 rotate-3 group-hover:rotate-0">
                                    <Icon
                                        name={proyecto.icon}
                                        class="text-3xl text-primary group-hover:text-white transition-colors"
                                    />
                                </div>
                                <h4 class="text-2xl font-bold text-brand-dark mb-4 tracking-tight">
                                    {proyecto.name}
                                </h4>
                                <p class="text-base text-gray-600 leading-relaxed">
                                    {proyecto.desc}
                                </p>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>

    <Footer />
</MainLayout>
