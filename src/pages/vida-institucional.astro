---
import MainLayout from "../layouts/MainLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import SectionHeader from "../components/SectionHeader.astro";
import ScheduleTable from "../components/ScheduleTable.astro";
import Card from "../components/ui/Card.astro";
import { Icon } from "astro-icon/components";

const niveles = [
    { name: "Jardín", desc: "Formación inicial." },
    { name: "Preescolar", desc: "Formación inicial." },
    { name: "Básica Primaria", desc: "Grados 1.º a 5.º." },
    { name: "Básica Secundaria", desc: "Grados 6.º a 9.º." },
    { name: "Media Técnica (Comercio)", desc: "Grados 10.º y 11.º." },
];

const proyectos = [
    {
        name: "PRAE",
        icon: "lucide:leaf",
        desc: "Educación ambiental y sostenibilidad institucional.",
    },
    {
        name: "Escuela de Padres",
        icon: "lucide:users-round",
        desc: "Formación y acompañamiento a familias.",
    },
    {
        name: "Bienestar",
        icon: "lucide:heart-handshake",
        desc: "Acciones de apoyo y convivencia escolar.",
    },
];
---

<MainLayout title="Vida Institucional">
    <Navbar />
    <PageHeader title="Vida Institucional" />

    <main class="space-y-24 pb-24">
        <!-- SECCIÓN 1: Oferta -->
        <section class="container mx-auto px-4 lg:px-8 mt-12" id="oferta">
            <div class="mb-12 text-center">
                <span
                    class="inline-block px-3 py-1 bg-primary/10 text-primary font-bold text-xs tracking-widest uppercase rounded mb-4"
                    >Institucional</span
                >
                <h2 class="text-4xl font-black text-brand-dark mb-4">Oferta</h2>
            </div>

            <div class="grid gap-8 md:grid-cols-3">
                <!-- Tarjeta 1: Jornadas y Niveles -->
                <Card
                    class="text-center group border-t-4 border-t-transparent hover:border-t-primary transition-all h-full"
                >
                    <div
                        class="w-20 h-20 bg-brand-light rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:bg-primary transition-all duration-500 rotate-3 group-hover:rotate-0"
                    >
                        <Icon
                            name="lucide:graduation-cap"
                            class="text-3xl text-primary group-hover:text-white transition-colors"
                        />
                    </div>
                    <h3
                        class="text-2xl font-bold text-brand-dark mb-6 tracking-tight"
                    >
                        Jornadas y Niveles
                    </h3>
                    <ul class="space-y-3 text-sm text-left inline-block">
                        {
                            niveles.map((nivel) => (
                                <li class="flex gap-2 text-gray-600">
                                    <span class="text-primary font-bold">
                                        •
                                    </span>
                                    <div>
                                        <strong class="text-brand-dark">
                                            {nivel.name}:
                                        </strong>
                                        <span class="text-gray-500">
                                            {nivel.desc}
                                        </span>
                                    </div>
                                </li>
                            ))
                        }
                    </ul>
                </Card>

                <!-- Tarjeta 2: Horarios Académicos -->
                <Card
                    class="text-center group border-t-4 border-t-transparent hover:border-t-primary transition-all h-full"
                    padding="none"
                >
                    <div class="p-8 pb-0">
                        <div
                            class="w-20 h-20 bg-brand-light rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:bg-primary transition-all duration-500 -rotate-3 group-hover:rotate-0"
                        >
                            <Icon
                                name="lucide:clock"
                                class="text-3xl text-primary group-hover:text-white transition-colors"
                            />
                        </div>
                        <h3
                            class="text-2xl font-bold text-brand-dark mb-6 tracking-tight"
                        >
                            Horarios Académicos
                        </h3>
                    </div>
                    <div class="px-2 pb-8 text-left">
                        <ScheduleTable />
                    </div>
                </Card>

                <!-- Tarjeta 3: Programas y Proyectos -->
                <Card
                    class="text-center group border-t-4 border-t-transparent hover:border-t-primary transition-all h-full"
                >
                    <div
                        class="w-20 h-20 bg-brand-light rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:bg-primary transition-all duration-500 rotate-3 group-hover:rotate-0"
                    >
                        <Icon
                            name="lucide:drafting-compass"
                            class="text-3xl text-primary group-hover:text-white transition-colors"
                        />
                    </div>
                    <h3
                        class="text-2xl font-bold text-brand-dark mb-6 tracking-tight"
                    >
                        Programas y Proyectos
                    </h3>
                    <ul class="space-y-3 text-sm text-left inline-block">
                        <li class="flex gap-2 text-gray-600">
                            <span class="text-primary font-bold">•</span>
                            <span class="font-bold text-brand-dark"
                                >Jardín y Preescolar</span
                            >
                        </li>
                        <li class="flex gap-2 text-gray-600">
                            <span class="text-primary font-bold">•</span>
                            <span class="font-bold text-brand-dark"
                                >Básica Primaria y Secundaria</span
                            >
                        </li>
                        <li class="flex gap-2 text-gray-600">
                            <span class="text-primary font-bold">•</span>
                            <span class="font-bold text-brand-dark"
                                >Media Técnica (Comercio)</span
                            >
                        </li>
                        <li class="flex gap-2 text-gray-600">
                            <span class="text-primary font-bold">•</span>
                            <div>
                                <span class="font-bold text-brand-dark"
                                    >Modelos flexibles:</span
                                >
                                <ul
                                    class="mt-1 space-y-1 ml-3 border-l-2 border-primary/10 pl-3"
                                >
                                    <li class="text-xs text-gray-500 italic">
                                        Procesos Básicos y Aceleración
                                    </li>
                                    <li class="text-xs text-gray-500 italic">
                                        Programa Caminar
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </Card>
            </div>
        </section>

        <!-- SECCIÓN 2: Proyectos -->
        <section class="bg-gray-50 py-24" id="proyectos">
            <div class="container mx-auto px-4 lg:px-8">
                <div class="mb-12 text-center">
                    <span
                        class="inline-block px-3 py-1 bg-secondary/10 text-secondary font-bold text-xs tracking-widest uppercase rounded mb-4"
                        >Institucional</span
                    >
                    <h2 class="text-4xl font-black text-brand-dark">
                        Proyectos
                    </h2>
                </div>

                <div class="grid gap-8 md:grid-cols-3">
                    {
                        proyectos.map((proyecto) => (
                            <Card class="text-center group border-t-4 border-t-transparent hover:border-t-primary transition-all">
                                <div class="w-20 h-20 bg-brand-light rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:bg-primary transition-all duration-500 rotate-3 group-hover:rotate-0">
                                    <Icon
                                        name={proyecto.icon}
                                        class="text-3xl text-primary group-hover:text-white transition-colors"
                                    />
                                </div>
                                <h4 class="text-2xl font-bold text-brand-dark mb-4 tracking-tight">
                                    {proyecto.name}
                                </h4>
                                <p class="text-base text-gray-600 leading-relaxed">
                                    {proyecto.desc}
                                </p>
                            </Card>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>

    <Footer />
</MainLayout>
