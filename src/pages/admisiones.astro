---
import { Icon } from "astro-icon/components";
import MainLayout from "../layouts/MainLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import SectionHeader from "../components/SectionHeader.astro";

const inscripcionRequisitos = [
    "Documento de identidad (Registro Civil o Tarjeta de Identidad).",
    "EPS o SISBEN.",
    "Carné de vacunas (si aplica).",
    "Fotocopia Factura de servicios públicos.",
    "Hoja de vida y boletín académico previos en papel membrete de la IE de procedencia.",
];

const matriculaNuevos = [
    "Documento de identidad (Registro Civil o Tarjeta de Identidad).",
    "Certificado EPS o SISBEN.",
    "Fotocopia Factura de servicios públicos.",
    "Hoja de vida.",
    "Boletín último periodo del año anterior.",
];

const matriculaAntiguos = [
    "Documento de identidad actualizado.",
    "Certificado EPS o SISBEN vigente.",
    "Fotocopia Factura de servicios públicos.",
    "Boletín último periodo del año anterior.",
];

const uniformeNinas = [
    "Yomber en tela a cuadros según la muestra institucional.",
    "Largo a máximo 3 cm por encima de la rodilla.",
    "Camisa blanca de manga corta.",
    "Medias blancas a la altura de la rodilla.",
    "Zapatos negros de amarrar.",
];

const uniformeNinos = [
    "Camiseta azul rey con cuello y escudo oficial.",
    "Jeans clásicos azul oscuro, bota recta.",
    "Correa con hebilla sencilla.",
    "Medias negras o azul oscuro (no tobilleras).",
    "Zapatos totalmente negros de amarrar.",
];
---

<MainLayout title="Admisiones">
    <Navbar />
    <PageHeader title="Admisiones" />

    <main class="space-y-20 pb-20">
        <!-- Inscripción -->
        <section class="container mx-auto px-4 lg:px-8" id="cupos">
            <SectionHeader
                subtitle="Inscripción"
                title="Inscripción y Cupos Disponibles"
            />
            <div class="grid gap-8 lg:grid-cols-2">
                <div
                    class="p-8 border border-gray-100 rounded-2xl bg-white shadow-sm"
                >
                    <h3
                        class="text-xl font-bold text-primary mb-4 flex items-center gap-3"
                    >
                        <Icon name="lucide:clipboard-list" class="h-6 w-6" /> Requisitos
                    </h3>
                    <ul class="space-y-3">
                        {
                            inscripcionRequisitos.map((item) => (
                                <li class="text-gray-600 text-base flex gap-2 leading-relaxed">
                                    <Icon
                                        name="lucide:circle-check"
                                        class="h-5 w-5 text-primary shrink-0 mt-0.5"
                                    />{" "}
                                    {item}
                                </li>
                            ))
                        }
                    </ul>
                    <div
                        class="mt-6 p-4 bg-primary/5 border border-primary/10 rounded-xl flex items-start gap-3 text-primary"
                    >
                        <Icon
                            name="lucide:package-check"
                            class="h-5 w-5 shrink-0 mt-0.5"
                        />
                        <div>
                            <h4
                                class="font-bold text-sm tracking-tight uppercase mb-1"
                            >
                                Entrega
                            </h4>
                            <p class="text-sm text-gray-600 leading-relaxed">
                                En carpeta manila rotulada. Documentos
                                originales el día de la matrícula. Diligenciar
                                con lapicero negro.
                            </p>
                        </div>
                    </div>
                </div>
                <div
                    class="p-8 border border-gray-100 rounded-2xl bg-brand-light/20"
                >
                    <h3
                        class="text-xl font-bold text-primary mb-4 flex items-center gap-3"
                    >
                        <Icon name="lucide:user-check" class="h-6 w-6" /> Estudiantes
                        Aceptados
                    </h3>
                    <p class="text-gray-600 text-base leading-relaxed">
                        Una vez verificada la documentación, se publicará el
                        listado oficial según cupos disponibles. El listado
                        estará disponible en PDF en esta sección o fijado en la
                        institución.
                    </p>
                </div>
            </div>
        </section>

        <!-- Matrícula -->
        <section class="bg-brand-light/10 py-20" id="matricula">
            <div class="container mx-auto px-4 lg:px-8">
                <SectionHeader subtitle="Proceso" title="Matrícula" />
                <div class="grid gap-8 lg:grid-cols-2">
                    <!-- Nuevos -->
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100"
                    >
                        <h3 class="text-xl font-bold text-primary mb-4">
                            Estudiantes Nuevos
                        </h3>
                        <ul class="space-y-2 mb-6">
                            {
                                matriculaNuevos.map((item) => (
                                    <li class="text-base text-gray-600 flex gap-2">
                                        <Icon
                                            name="lucide:circle-check"
                                            class="h-5 w-5 text-primary shrink-0 mt-0.5"
                                        />
                                        {item}
                                    </li>
                                ))
                            }
                        </ul>
                        <div
                            class="mt-4 p-4 bg-primary/5 border border-primary/10 rounded-xl flex items-center gap-3 text-primary"
                        >
                            <Icon
                                name="lucide:user-round-check"
                                class="h-5 w-5 shrink-0"
                            />
                            <p
                                class="text-sm font-bold tracking-tight uppercase"
                            >
                                Trámite presencial por padre/madre
                            </p>
                        </div>
                    </div>
                    <!-- Antiguos -->
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100"
                    >
                        <h3 class="text-xl font-bold text-primary mb-4">
                            Estudiantes Antiguos
                        </h3>
                        <ul class="space-y-2 mb-6">
                            {
                                matriculaAntiguos.map((item) => (
                                    <li class="text-base text-gray-600 flex gap-2">
                                        <Icon
                                            name="lucide:circle-check"
                                            class="h-5 w-5 text-primary shrink-0 mt-0.5"
                                        />
                                        {item}
                                    </li>
                                ))
                            }
                        </ul>
                        <div
                            class="mt-4 p-4 bg-primary/5 border border-primary/10 rounded-xl flex items-center gap-3 text-primary"
                        >
                            <Icon
                                name="lucide:calendar-clock"
                                class="h-5 w-5 shrink-0"
                            />
                            <p
                                class="text-sm font-bold tracking-tight uppercase"
                            >
                                Renovación anual obligatoria
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Uniformes -->
        <section class="container mx-auto px-4 lg:px-8" id="uniformes">
            <SectionHeader
                subtitle="Uniformes"
                title="Manual de Convivencia: Presentación"
            />
            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                <div class="p-6 border border-gray-100 rounded-xl">
                    <h4
                        class="font-bold text-primary mb-4 flex items-center gap-3"
                    >
                        <Icon name="lucide:shirt" class="h-6 w-6" /> Niñas / Jóvenes
                    </h4>
                    <ul class="text-base space-y-2 text-gray-600">
                        {
                            uniformeNinas.map((item) => (
                                <li class="flex gap-2">
                                    <Icon
                                        name="lucide:circle-check"
                                        class="h-5 w-5 text-primary shrink-0 mt-0.5"
                                    />
                                    {item}
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div class="p-6 border border-gray-100 rounded-xl">
                    <h4
                        class="font-bold text-primary mb-4 flex items-center gap-3"
                    >
                        <Icon name="lucide:shirt" class="h-6 w-6" /> Niños / Jóvenes
                    </h4>
                    <ul class="text-base space-y-2 text-gray-600">
                        {
                            uniformeNinos.map((item) => (
                                <li class="flex gap-2">
                                    <Icon
                                        name="lucide:circle-check"
                                        class="h-5 w-5 text-primary shrink-0 mt-0.5"
                                    />
                                    {item}
                                </li>
                            ))
                        }
                    </ul>
                </div>
                <div
                    class="p-6 bg-brand-dark text-white rounded-xl lg:col-span-1"
                >
                    <h4 class="font-bold text-sky-400 mb-4">Ed. Física</h4>
                    <p class="text-base text-gray-300 leading-relaxed">
                        Camiseta blanca, sudadera azul institucional, tenis
                        blancos o negros.
                    </p>
                    <div
                        class="mt-4 p-3 bg-yellow-400/10 border border-yellow-400/20 rounded text-sm text-yellow-400 font-medium"
                    >
                        Nota: No se permite el uso de capuchas.
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</MainLayout>
