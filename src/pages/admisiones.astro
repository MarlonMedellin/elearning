---
import MainLayout from "../layouts/MainLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import SectionHeader from "../components/SectionHeader.astro";
import Card from "../components/ui/Card.astro";
import { Icon } from "astro-icon/components";

const inscripcionRequisitos = [
    "Documento de identidad (Registro Civil o Tarjeta de Identidad).",
    "EPS o SISBEN.",
    "Carné de vacunas (si aplica).",
    "Fotocopia Factura de servicios públicos.",
    "Hoja de vida y boletín académico previos en papel membrete de la IE de procedencia.",
];

const matriculaNuevos = [
    "Documento de identidad (Registro Civil o Tarjeta de Identidad).",
    "Certificado EPS o SISBEN.",
    "Fotocopia Factura de servicios públicos.",
    "Hoja de vida.",
    "Boletín último periodo del año anterior.",
];

const matriculaAntiguos = [
    "Documento de identidad actualizado.",
    "Certificado EPS o SISBEN vigente.",
    "Fotocopia Factura de servicios públicos.",
    "Boletín último periodo del año anterior.",
];

const uniformeNinas = [
    "Yomber en tela a cuadros según la muestra institucional.",
    "Largo a máximo 3 cm por encima de la rodilla.",
    "Camisa blanca de manga corta.",
    "Medias blancas a la altura de la rodilla.",
    "Zapatos negros de amarrar.",
];

const uniformeNinos = [
    "Camiseta azul rey con cuello y escudo oficial.",
    "Jeans clásicos azul oscuro, bota recta.",
    "Correa con hebilla sencilla.",
    "Medias negras o azul oscuro (no tobilleras).",
    "Zapatos totalmente negros de amarrar.",
];
---

<MainLayout title="Admisiones">
    <Navbar />
    <PageHeader title="Admisiones" />

    <main class="space-y-20 pb-20">
        <!-- Inscripción -->
        <section class="container mx-auto px-4 lg:px-8" id="cupos">
            <SectionHeader
                subtitle="Inscripción"
                title="Inscripción y Cupos Disponibles"
            />
            <div class="grid gap-8 lg:grid-cols-2">
                <Card>
                    <h3
                        class="text-xl font-bold text-primary mb-6 flex items-center gap-2"
                    >
                        <Icon name="lucide:clipboard-list" class="icon-md" /> Requisitos
                    </h3>
                    <ul class="space-y-4">
                        {
                            inscripcionRequisitos.map((item) => (
                                <li class="text-gray-600 flex gap-3">
                                    <Icon
                                        name="lucide:circle-check"
                                        class="text-primary h-5 w-5 shrink-0 mt-0.5"
                                    />{" "}
                                    <span class="text-base">{item}</span>
                                </li>
                            ))
                        }
                    </ul>
                    <div
                        class="mt-8 p-6 bg-brand-light/30 rounded-2xl border border-brand-light"
                    >
                        <h4 class="font-bold text-brand-dark mb-2">Entrega</h4>
                        <p class="text-sm text-gray-600 leading-relaxed">
                            En carpeta manila rotulada. Documentos originales el
                            día de la matrícula. Diligenciar con lapicero negro.
                        </p>
                    </div>
                </Card>
                <Card variant="light" hover={false}>
                    <h3
                        class="text-xl font-bold text-primary mb-6 flex items-center gap-2"
                    >
                        <Icon name="lucide:user-check" class="icon-md" /> Estudiantes
                        Aceptados
                    </h3>
                    <p class="text-gray-600 leading-relaxed text-base">
                        Una vez verificada la documentación, se publicará el
                        listado oficial según cupos disponibles. El listado
                        estará disponible en PDF en esta sección o fijado en la
                        institución.
                    </p>
                </Card>
            </div>
        </section>

        <!-- Matrícula -->
        <section class="bg-gray-50 py-24" id="matricula">
            <div class="container mx-auto px-4 lg:px-8">
                <SectionHeader subtitle="Proceso" title="Matrícula" />
                <div class="grid gap-8 lg:grid-cols-2">
                    <!-- Nuevos -->
                    <Card>
                        <h3 class="text-xl font-bold text-primary mb-6">
                            Estudiantes Nuevos
                        </h3>
                        <ul class="space-y-3 mb-8">
                            {
                                matriculaNuevos.map((item) => (
                                    <li class="text-base text-gray-600 flex gap-2">
                                        <span class="text-primary">•</span>{" "}
                                        {item}
                                    </li>
                                ))
                            }
                        </ul>
                        <p class="text-xs text-gray-400 italic">
                            Trámite presencial por padre/madre.
                        </p>
                    </Card>
                    <!-- Antiguos -->
                    <Card>
                        <h3 class="text-xl font-bold text-primary mb-6">
                            Estudiantes Antiguos
                        </h3>
                        <ul class="space-y-3 mb-8">
                            {
                                matriculaAntiguos.map((item) => (
                                    <li class="text-base text-gray-600 flex gap-2">
                                        <span class="text-primary">•</span>{" "}
                                        {item}
                                    </li>
                                ))
                            }
                        </ul>
                        <p class="text-xs text-gray-400 italic">
                            Renovación anual obligatoria.
                        </p>
                    </Card>
                </div>
            </div>
        </section>

        <!-- Uniformes -->
        <section class="container mx-auto px-4 lg:px-8" id="uniformes">
            <SectionHeader
                subtitle="Uniformes"
                title="Manual de Convivencia: Presentación"
            />
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                <Card padding="md">
                    <h4
                        class="font-bold text-primary mb-6 flex items-center gap-2"
                    >
                        <Icon name="lucide:shirt" class="icon-md" /> Niñas / Jóvenes
                    </h4>
                    <ul class="text-base space-y-3 text-gray-600">
                        {
                            uniformeNinas.map((item) => (
                                <li class="flex gap-2">
                                    <span class="text-primary">•</span> {item}
                                </li>
                            ))
                        }
                    </ul>
                </Card>
                <Card padding="md">
                    <h4
                        class="font-bold text-primary mb-6 flex items-center gap-2"
                    >
                        <Icon name="lucide:shirt" class="icon-md" /> Niños / Jóvenes
                    </h4>
                    <ul class="text-base space-y-3 text-gray-600">
                        {
                            uniformeNinos.map((item) => (
                                <li class="flex gap-2">
                                    <span class="text-primary">•</span> {item}
                                </li>
                            ))
                        }
                    </ul>
                </Card>
                <Card variant="dark" padding="md">
                    <h4
                        class="font-bold text-sky-400 mb-6 flex items-center gap-2"
                    >
                        <Icon name="lucide:pipette" class="icon-md" /> Ed. Física
                    </h4>
                    <p class="text-base text-gray-300 leading-relaxed mb-6">
                        Camiseta blanca, sudadera azul institucional, tenis
                        blancos o negros.
                    </p>
                    <div
                        class="p-4 bg-yellow-500/10 border border-yellow-500/20 rounded-xl text-xs text-yellow-500/90"
                    >
                        <strong>Nota:</strong> No se permite el uso de capuchas.
                    </div>
                </Card>
            </div>
        </section>
    </main>

    <Footer />
</MainLayout>
